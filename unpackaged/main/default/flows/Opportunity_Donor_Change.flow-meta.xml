<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <description>Used with Subledger suppressed ledger entries - controls which kinds of donor changes make it to the GL. FB-3782</description>
    <environments>Default</environments>
    <formulas>
        <name>f_DonorChangeType</name>
        <dataType>String</dataType>
        <expression>IF(
  INCLUDES({!$Record__Prior.Account.Organization_Constituency__c}, &quot;Development&quot;),
    IF(INCLUDES({!$Record.Account.Organization_Constituency__c},&quot;Development&quot;),
    &quot;Between Development&quot;,
    &quot;Development to Membership&quot;),
    IF(INCLUDES({!$Record__Prior.Account.Organization_Constituency__c}, &quot;Membership&quot;), 
      IF(INCLUDES({!$Record.Account.Organization_Constituency__c},&quot;Development&quot;),
        &quot;Membership to Development&quot;,&quot;Ignore&quot;),
        &quot;Ignore&quot;))</expression>
    </formulas>
    <interviewLabel>Opportunity - Donor Change {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Opportunity - Donor Change</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Set_Donor_Change_Type</name>
        <label>Set Donor Change Type</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <inputAssignments>
            <field>Donor_Change_Type__c</field>
            <value>
                <elementReference>f_DonorChangeType</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Set_Donor_Change_Type</targetReference>
        </connector>
        <filterFormula>{!$Permission.Flow_Automations_Off} &lt;&gt; True
&amp;&amp;
ISCHANGED({!$Record.Account.Id}) || ISCHANGED({!$Record.npsp__Primary_Contact__r.Id})</filterFormula>
        <object>Opportunity</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
