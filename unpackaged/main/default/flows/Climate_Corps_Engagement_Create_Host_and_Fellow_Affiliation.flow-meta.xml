<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <description>Create an Affiliation between the Organization listed in the Account field and Contact listed in the Fellow Name field.
FB-1571</description>
    <environments>Default</environments>
    <formulas>
        <name>f_Description</name>
        <dataType>String</dataType>
        <expression>TEXT({!$Record.CC_Year__c})&amp;&quot; Engagement&quot;</expression>
    </formulas>
    <interviewLabel>Climate Corps Engagement -&gt; Create Host and Fellow Affiliation {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Climate Corps Engagement -&gt; Create Host and Fellow Affiliation</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <description>Create an Affiliation Record for the Fellow / Host Affiliation established from the Climate Corps Engagement Stage__c being set to &quot;Engagement Confirmed&quot;</description>
        <name>Create_Fellow_Host_Affiliation</name>
        <label>Create Fellow - Host Affiliation</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <inputAssignments>
            <field>Affiliation_Type__c</field>
            <value>
                <stringValue>Climate Corps Fellow/Climate Corps Host</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Created_From_FellowApp__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>npe5__Contact__c</field>
            <value>
                <elementReference>$Record.Fellow_Name__r.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>npe5__Description__c</field>
            <value>
                <elementReference>f_Description</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>npe5__EndDate__c</field>
            <value>
                <elementReference>$Record.End_date__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>npe5__Organization__c</field>
            <value>
                <elementReference>$Record.Account__r.Id</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>npe5__Primary__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>npe5__Role__c</field>
            <value>
                <stringValue>Climate Corps Fellow</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>npe5__StartDate__c</field>
            <value>
                <elementReference>$Record.Start_Date__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>npe5__Status__c</field>
            <value>
                <stringValue>Current</stringValue>
            </value>
        </inputAssignments>
        <object>npe5__Affiliation__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordCreates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Create_Fellow_Host_Affiliation</targetReference>
        </connector>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterFormula>IsPickVal({!$Record.Stage__c},&quot;Engagement Confirmed&quot;) &amp;&amp; {!$Permission.Flow_Automations_Off}&lt;&gt;True</filterFormula>
        <object>Climate_Corps_Engagement__c</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
