<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <description>updates field to TRUE when sub-con contains EDFBIZ - Climate Corps</description>
    <environments>Default</environments>
    <interviewLabel>Account - Update Climate Corps Consultant Access field {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Account - Update Climate Corps Consultant Access field</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_CC_consultant_field</name>
        <label>Update CC consultant field</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <inputAssignments>
            <field>Climate_Corps_Consultant_Access__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_CC_consultant_field</targetReference>
        </connector>
        <filterFormula>{!$Permission.Flow_Automations_Off} &lt;&gt; True
&amp;&amp;
not(isblank({!$Record.Organization_sub_constituency__c}))
&amp;&amp;
(isnew() || ischanged({!$Record.Organization_sub_constituency__c}))
&amp;&amp;
(CONTAINS({!$Record.Sub_Constituency_Text__c}, &quot;EDFBIZ - Climate Corps&quot;))</filterFormula>
        <object>Account</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
