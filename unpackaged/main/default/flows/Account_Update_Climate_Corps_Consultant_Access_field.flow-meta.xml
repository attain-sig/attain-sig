<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <decisions>
        <name>Check_Sub_Constituency</name>
        <label>Check Sub-Constituency</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <defaultConnector>
            <targetReference>Update_CC_consultant_field</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Check_Value</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>IncludesEDFBizSubConstitunecy</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_CC_consultant_field</targetReference>
            </connector>
            <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
            <label>Check Value</label>
        </rules>
        <rules>
            <name>Contains_EDFBIZ</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Organization_sub_constituency__c</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>EDFBIZ - Climate Corps</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_CC_consultant_field</targetReference>
            </connector>
            <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
            <label>Contains EDFBIZ</label>
        </rules>
    </decisions>
    <description>updates field to TRUE when sub-con contains EDFBIZ - Climate Corps</description>
    <environments>Default</environments>
    <formulas>
        <name>IncludesEDFBizSubConstitunecy</name>
        <dataType>Boolean</dataType>
        <expression>INCLUDES({!$Record.Organization_sub_constituency__c}, &quot;EDFBIZ - Climate Corps&quot;)</expression>
    </formulas>
    <interviewLabel>Account - Update Climate Corps Consultant Access field {!$Flow.CurrentDateTime}</interviewLabel>
