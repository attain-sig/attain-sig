<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <description>updates field to TRUE when sub-con contains EDFBIZ - Climate Corps

V2 setting 5 minute delay to overcome flow timeouts in validation</description>
    <environments>Default</environments>
    <interviewLabel>Account - Update Climate Corps Consultant Access field {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Account - Update Climate Corps Consultant Access field</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_CC_consultant_field</name>
        <label>Update CC consultant field</label>
        <locationX>308</locationX>
        <locationY>276</locationY>
        <inputAssignments>
            <field>Climate_Corps_Consultant_Access__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <filterFormula>{!$Permission.Flow_Automations_Off} &lt;&gt; True
&amp;&amp;
not(isblank({!$Record.Organization_sub_constituency__c}))
&amp;&amp;
(isnew() || ischanged({!$Record.Organization_sub_constituency__c}))
&amp;&amp;
(CONTAINS({!$Record.Sub_Constituency_Text__c}, &quot;EDFBIZ - Climate Corps&quot;))</filterFormula>
        <object>Account</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <scheduledPaths>
            <name>X5_Minutes_Later</name>
            <connector>
                <targetReference>Update_CC_consultant_field</targetReference>
            </connector>
            <label>5 Minutes Later</label>
            <offsetNumber>5</offsetNumber>
            <offsetUnit>Minutes</offsetUnit>
            <recordField>LastModifiedDate</recordField>
            <timeSource>RecordField</timeSource>
        </scheduledPaths>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Draft</status>
</Flow>
