    <decisions>
        <description>Check which Date field was updated and update the corresponding Picklist field</description>
        <name>Check_Which_Date_Updated</name>
        <label>Check Which Date Updated</label>
        <locationX>446</locationX>
        <locationY>287</locationY>
        <defaultConnectorLabel>No Update - End</defaultConnectorLabel>
        <rules>
            <name>Both_Dates_Updated</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Start_Date__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.End_date__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Start_and_End_Approval</targetReference>
            </connector>
            <label>Both Dates Updated</label>
        </rules>
        <rules>
            <name>Start_Date_Updated</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Start_Date__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Start_Date_Approval</targetReference>
            </connector>
            <label>Start Date Updated</label>
        </rules>
        <rules>
            <name>End_Date_Updated</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.End_date__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_End_Date_Approval</targetReference>
            </connector>
            <label>End Date Updated</label>
        </rules>
    </decisions>
