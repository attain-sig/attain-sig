    <apiVersion>58.0</apiVersion>
    <description>Flow that triggers an auto email to a recipient (Finance) once a Fund Request case is &quot;Approved&quot; requesting them to create the new fund in NetSuite.</description>
    <environments>Default</environments>
    <interviewLabel>Case After Save ---&gt; Trigger Auto-notification for Fund Requests {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Case After Save ---&gt; Trigger Auto-notification for Fund Requests</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Send_Fund_Request_Email_Case_Owner</targetReference>
        </connector>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Reason</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Fund Request</stringValue>
            </value>
        </filters>
        <filters>
            <field>Status</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Closed - Resolved</stringValue>
            </value>
        </filters>
        <object>Case</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <textTemplates>
        <description>Email body for Fund Request email.</description>
        <name>EmailBodyFundRequest</name>
        <isViewedAsPlainText>false</isViewedAsPlainText>
        <text>&lt;p&gt;Hello,&lt;/p&gt;&lt;p&gt;I’d like to request the following new Fund.&lt;/p&gt;&lt;p&gt;&lt;strong&gt;{!$Record.New_Fund_Name__c}&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;&lt;strong style=&quot;background-color: rgb(255, 255, 255); color: rgb(0, 0, 0);&quot;&gt;{!$Record.Fund_Administrator__r.FirstName} {!$Record.Fund_Administrator__r.LastName}&lt;/strong&gt;&lt;span style=&quot;background-color: rgb(255, 255, 255); color: rgb(68, 68, 68);&quot;&gt; should be assigned as Fund Administrator.&lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;background-color: rgb(255, 255, 255); color: rgb(68, 68, 68);&quot;&gt;&lt;span class=&quot;ql-cursor&quot;&gt;﻿&lt;/span&gt;Please update the &lt;/span&gt;&lt;strong style=&quot;background-color: rgb(255, 255, 255); color: rgb(68, 68, 68);&quot;&gt;Created in NetSuite By&lt;/strong&gt;&lt;span style=&quot;background-color: rgb(255, 255, 255); color: rgb(68, 68, 68);&quot;&gt; and &lt;/span&gt;&lt;strong style=&quot;background-color: rgb(255, 255, 255); color: rgb(68, 68, 68);&quot;&gt;Created in NetSuite Date Case&lt;/strong&gt;&lt;span style=&quot;background-color: rgb(255, 255, 255); color: rgb(68, 68, 68);&quot;&gt; fields upon creation.&lt;/span&gt;&lt;/p&gt;&lt;p&gt;New Fund Request Link: &lt;strong style=&quot;color: rgb(0, 0, 0);&quot;&gt; &lt;/strong&gt;&lt;span style=&quot;color: rgb(0, 0, 0);&quot;&gt;https://environmentaldefensefund--shareddev.sandbox.lightning.force.com/lightning/r/Case/{!$Record.Id}/view&lt;/span&gt;&lt;/p&gt;&lt;p&gt;Thank you!&lt;/p&gt;</text>
    </textTemplates>
    <textTemplates>
        <description>Email Subject for Fund Request approval.</description>
        <name>EmailSubjectFundRequest</name>
        <isViewedAsPlainText>true</isViewedAsPlainText>
        <text>New Fund Request:  {!$Record.New_Fund_Name__c}</text>
    </textTemplates>
    <triggerOrder>5</triggerOrder>
